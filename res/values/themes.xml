<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.-->
    <style name="Theme.JTech" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color.-->
        <item name="colorPrimary">@color/blue_900</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color.-->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>



    <style name="CardStyle">

        <item name="cardElevation">10dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:layout_margin">10dp</item>
        <!--<item name="cardBackgroundColor">@color/blue_900</item>
        <item name="android:layout_margin">10dp</item>
            -->
    </style>

    <style name="CategoryTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_900</item>

    </style>
    <style name="CategoryImage">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/off_black</item>
    </style>






</resources>